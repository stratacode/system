#!/bin/sh

# Run with an argument to specify the target build dir.  If no argument is supplied a default is chosen in /tmp

# Builds StrataCode using StrataCode. This is the preferred way to build a distribution for tagging and packaging but it's
# easy to build StrataCode from Java as well to bootstrap the process since there's no StrataCode used in building StrataCode.

set -e

STAGEDIR=/tmp/

BUILDS_DIR=/usr/local/scc/builds
BUILD_NUM_FILE=~/.stratacode/buildNum.properties 

SC_DIR=`dirname $BASH_SOURCE[0]`
SC_DIR=`dirname $SC_DIR`

RES_FILE=StrataCode.zip

BP_FILE=${SC_DIR}/buildTag/build.properties
CUR_TAG=`grep tag $BP_FILE | sed 's/tag=//'`
CUR_VERSION=`grep version $BP_FILE | sed 's/version=//'`
CUR_BUILDNUM=`grep scc= $BUILD_NUM_FILE | sed 's/scc=//'`

if [ "$CUR_BUILDNUM" = "" ] ; then
   read -p "Missing current build number from file: $BUILD_NUM_FILE - enter starting build number: [1]:" CUR_BUILDNUM
   mkdir -p `dirname $BUILD_NUM_FILE`
   cat > $BUILD_NUM_FILE <<endbf 
buildNum=$CUR_BUILDNUM
endbf
fi   

USAGE_MSG="makeSC [--release] [buildsDir - default is $BUILDS_DIR]"
SCC_ARGS=""

BUILDS_DIR_SET=0

while [[ $# -gt 0 ]]
do
   case $1 in
       --release)
       SCC_ARGS="-Pbuild.tag=release"
       shift 
       ;;
       *)
       if [ "$BUILDS_DIR_SET" = "1" ] ; then
          echo "Extra argument: $USAGE_MSG" 
          exit 1
       fi
       BUILDS_DIR=$1
       BUILDS_DIR_SET=1
       shift
       ;;
   esac
done

RES_DIR=$BUILDS_DIR/$CUR_TAG/$CUR_VERSION/$CUR_BUILDNUM
BUILD_DIR=$RES_DIR/build
mkdir -p $RES_DIR
mkdir -p $BUILD_DIR

echo "Building StrataCode into: $BUILD_DIR - results in $RES_DIR/$RES_FILE (stagedir: $STAGEDIR)"
# For a clean build you should run this from the source directly, or first build StrataCode, then use it to build itself.
scc -c -a coreRuntime -da $BUILD_DIR
scc -c -a $SCC_ARGS system -da $BUILD_DIR

# Now we package up the STAGEDIR/StrataCode directory.  
rm -rf $STAGEDIR/StrataCode

# old - top level build dir
echo "cp -rf $BUILD_DIR $STAGEDIR/StrataCode"
cp -prf $BUILD_DIR $STAGEDIR/StrataCode

echo "From stagedir: $STAGEDIR"
cd $STAGEDIR
echo "zip $RES_FILE StrataCode/bin/* StrataCode/README.md StrataCode/layers/* StrataCode/bundles/* StrataCode/conf/*"
zip $RES_FILE StrataCode/bin/* StrataCode/README.md StrataCode/layers/* StrataCode/bundles/* StrataCode/conf/*

if [ "$RES_DIR" != "$STAGEDIR" ]; then
   mv $RES_FILE $RES_DIR/
fi

echo "Result file is: $RES_DIR/$RES_FILE"
